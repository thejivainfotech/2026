{%- style -%}
  .ji-testimonial-section-{{ section.id }} {
    padding: 60px 20px;
    text-align: center;
    position: relative;
    max-width: 100%;
    margin: 0 auto;
    border-top: 1px solid #eeeeee;
    {% if section.settings.bg_image != blank %}
      background-image: url('{{ section.settings.bg_image | image_url: width: 2000 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      background-attachment: {{ section.settings.bg_attachment }};
    {% else %}
      background-color: {{ section.settings.bg_color }};
    {% endif %}
  }

  .ji-testimonial-section-{{ section.id }}::before {
    content: "";
    position: absolute;
    top: 0; left: 0; width: 100%; height: 100%;
    background-color: rgba(0,0,0, {{ section.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .ji-testimonial-section-{{ section.id }} > * {
    position: relative;
    z-index: 2;
  }

  .ji-testimonial-header h2 {
    font-size: 48px;
    font-weight: 400;
    color: {{ section.settings.text_color }}; 
    margin-top: 0;
    margin-bottom: 5px;
    text-transform: uppercase;
    line-height: 1.2;
}
  
  .ji-testimonial-header p, .ji-review-count {
     color: {{ section.settings.text_color }};
     font-size: 18px;
     margin: 0;
  }

  .ji-stars-total { color: #d01366; font-size: 20px; margin-top: 10px; line-height: 30px; }
  
  .ji-slider-wrapper {
    position: relative;
    display: flex;
    align-items: center;
    margin-top: 30px;
    padding: 0 40px;
    max-width: 1250px;
    margin-left: auto;
    margin-right: auto;
  }

  .ji-testimonial-container {
    display: flex;
    overflow-x: auto;
    scroll-behavior: smooth;
    gap: 10px;
    scrollbar-width: none;
    padding: 15px 5px;
    width: 100%;
  }
  .ji-testimonial-container::-webkit-scrollbar { display: none; }

  .ji-testimonial-card {
    background: {{ section.settings.card_bg_color }};
    border-radius: 8px;
    min-width: calc(33.33% - 6px);
    padding: 20px;
    text-align: left;
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
  }

  .ji-testimonial-content { 
    background: white; 
    padding: 16px; 
    border-radius: 4px; 
    min-height: 180px;
    flex-grow: 1;
  }

  .ji-customer-name { 
    font-weight: 700; 
    text-transform: uppercase; 
    font-size: 16px;
    color: #2E1947;
  }

  .ji-slider-arrow {
    background: transparent;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    fill: {{ section.settings.arrow_color }};
    transition: all 0.3s ease;
  }
  .ji-arrow-prev { left: -50px; }
  .ji-arrow-next { right: -50px; }

  @media (max-width: 768px) {
    .ji-testimonial-card { min-width: 95%; }
    
    .ji-slider-wrapper {
      flex-direction: column;
      padding: 0;
    }

    .ji-slider-arrow {
      position: static; 
      transform: none;
      margin: 20px 5px 0;
      display: inline-flex;
      border-radius: 50%;
      width: 52px;
      height: 52px;
    }

    .ji-mobile-arrows {
      display: flex;
      justify-content: center;
      width: 100%;
      margin-top: 10px;
    }
    .ji-explore-btn {
        padding: 0px 50px !important;
    }
  }

  @media (min-width: 769px) {
    .ji-mobile-arrows { display: contents; }
  }

  .ji-explore-btn-wrapper { margin-top: 40px; }
  .ji-explore-btn {
    display: inline-block;
    background: #2E1947;
    color: white;
    padding: 0px 20px;
    border-radius: 70px;
    text-decoration: none;
    font-weight: 400;
    font-size: 38px;
    text-transform: uppercase;
    font-family: 'Anton', sans-serif !important; 
  }
{%- endstyle -%}

