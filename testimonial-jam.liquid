<script>
  (function() {
    const initSlider = () => {
      const slider = document.getElementById('ji-slider-{{ section.id }}');
      const prevBtn = document.getElementById('ji-prev-{{ section.id }}');
      const nextBtn = document.getElementById('ji-next-{{ section.id }}');
      
      if (!slider || !prevBtn || !nextBtn) return;

      const scrollAmount = () => slider.offsetWidth > 768 ? 400 : (slider.querySelector('.ji-testimonial-card').offsetWidth + 20);

      nextBtn.addEventListener('click', () => {
        slider.scrollBy({ left: scrollAmount(), behavior: 'smooth' });
      });

      prevBtn.addEventListener('click', () => {
        slider.scrollBy({ left: -scrollAmount(), behavior: 'smooth' });
      });
    };

    document.addEventListener('DOMContentLoaded', initSlider);
    if (window.Shopify && Shopify.designMode) {
      document.addEventListener('shopify:section:load', initSlider);
    }
  })();
</script>

