{% style %}
  @import url('https://fonts.googleapis.com/css2?family=Anton&display=swap');

  .jam-comparison-wrapper {
    position: relative;
    overflow: hidden;
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    {% if section.settings.bg_image != blank %}
      background-image: url('{{ section.settings.bg_image | img_url: '2000x' }}');
      background-size: cover;
      background-position: center;
    {% endif %}
  }
 .jam-comparison-bottom {
      font-size: 22px;
      text-align: center;
      max-width: 1100px;
      margin: auto;
      font-style: italic;
      line-height: 1.2;
      padding-top: 20px;
  }

  @media (max-width: 768px) {
    .jam-comparison-wrapper {
      padding-top: 10px;
      padding-bottom: {{ section.settings.padding_bottom | divided_by: 2 }}px;
    }
  }

  .jam-comparison-section {
    max-width: 1360px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
    z-index: 2;
  }

  .section-shape-img {
    position: absolute;
    z-index: 1;
    pointer-events: none;
    top: {{ section.settings.shape_top }}%;
    left: {{ section.settings.shape_left }}%;
    width: {{ section.settings.shape_width }}px;
    transform: translate(-50%, -50%);
  }

  .comp-grid-container {
    display: grid;
    grid-template-columns: 1.5fr 1.5fr 1fr 1fr;
    gap: 15px;
  }

  .comp-header { margin-bottom: 15px; }
  .header-item {
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    border: 1px solid #f0f0f0;
    min-height: 100px;
    border-radius: 4px;
  }

  .header-title-box {
    grid-column: span 2;
    justify-content: flex-start;
    padding-left: 40px;
    gap: 30px;
  }

  .styled-brand-title {
    font-family: 'Anton', sans-serif;
    font-weight: 400;
    font-size: 78px;
    color: #fff;
    text-transform: uppercase;
    -webkit-text-stroke: 2px #AF1F5C;
    text-shadow: 6px 6px 0px #B01F5D;
    line-height: 99px;
    margin: 0;
}

 .vs-label {
    font-family: 'Anton', sans-serif !important;
    font-size: 36px;
    color: #2E1947;
    font-weight: 400;
    line-height: 54px;
}
 .vs-label p{
    font-family: 'Anton', sans-serif !important;
    font-size: 36px;
    color: #2E1947;
    font-weight: 400;
    line-height: 54px;
}

  .header-logo-box img { 
    max-width: 90px;
    height: auto; 
    }

.header-others-text p{
    font-family: 'Anton', sans-serif !important;
    font-size: 36px;
    font-weight: 400;
    color: #2E1947;
    text-transform: uppercase;
    line-height: 40px;
    text-align: center;
}
.header-item.header-others-text {
    font-family: 'Anton', sans-serif !important;
    font-size: 36px;
    text-align: center;
    line-height: 40px;
    font-weight: 400;
    color: #2E1947;
    padding-inline: 64px;
}

  .col-image img { width: 100%; height: 100%; object-fit: cover; display: block; border-radius: 4px; }
  .col-features { 
    background-color: #B5D4EE;
    display: flex; 
    flex-direction: column; 
    border-radius: 4px; 
    padding: 15px 25px;
}
  .feature-row {
    flex: 1;
    display: flex;
    align-items: center;
    font-size: 16px;
    color: #2E1947;
    font-weight: 700;
    text-transform: uppercase;
    border-bottom: 1px dashed #8BBBE2;
}



  .feature-row:last-child { border-bottom: none; }

  .col-brand-status { background-color: #AF1F5C; display: flex; flex-direction: column; border-radius: 4px; }
  .col-others-status { background-color: #fff; display: flex; flex-direction: column; border-radius: 4px; border: 1px solid #f2f2f2; }

  .icon-cell { flex: 1; display: flex; align-items: center; justify-content: center; min-height: 70px; }
  .icon-cell svg, .icon-cell img { width: 50px; height: auto; }

  @media (max-width: 768px) {
    .comp-grid-container { 
      grid-template-columns: 1.8fr 1fr 1fr;
      gap: 10px; 
    }
    .col-image {
      display: none;
    }
    .header-item {
      padding: 10px;
      min-height: 80px;
    }
.header-title-box {
      grid-column: span 1;
      padding-left: 10px;
      flex-direction: column;
      gap: 5px;
      justify-content: center;
      text-align: center;
    }
.styled-brand-title { 
      font-size: 24px; 
      line-height: 28px;
      text-shadow: 2px 2px 0px #AF1F5C;
      -webkit-text-stroke: 1px #AF1F5C;
    }
    .vs-label, .vs-label p {
      font-size: 14px !important;
      line-height: 16px !important;
    }
    .header-logo-box img {
      max-width: 60px;
    }
    .header-others-text.header-item {
      padding-inline: 10px;
      font-size: 18px !important;
      line-height: 20px !important;
    }
    .header-others-text p {
      font-size: 18px !important;
      line-height: 20px !important;
    }
    .col-features {
      padding: 10px 15px;
    }
    .feature-row {
      font-size: 13px;
      line-height: 1.2;
      padding: 10px 0;
    }
    .icon-cell {
      min-height: 60px;
    }
    .icon-cell svg, .icon-cell img {
      width: 35px;
    }
    .section-shape-img {
      top: 65%;
      left: 80%;
      width: 240px;
    }
    }
{% endstyle %}

<div class="jam-comparison-wrapper">
  {% if section.settings.shape_image != blank %}
    <img src="{{ section.settings.shape_image | img_url: '800x' }}" class="section-shape-img" alt="decoration">
  {% endif %}

  <div class="jam-comparison-section">
    <div class="comp-header comp-grid-container">
      <div class="header-item header-title-box">
        <h2 class="styled-brand-title">{{ section.settings.main_brand_text }}</h2>
        <span class="vs-label">{{ section.settings.others_label }}</span>
      </div>
      <div class="header-item header-logo-box">
        {% if section.settings.brand_logo != blank %}
          <img src="{{ section.settings.brand_logo | img_url: '300x' }}" alt="Brand Logo">
        {% endif %}
      </div>
      <div class="header-item header-others-text">
        {{ section.settings.others }}
      </div>
    </div>

    <div class="comp-body comp-grid-container">
      <div class="col-image">
        {% if section.settings.side_image != blank %}
          <img src="{{ section.settings.side_image | img_url: '800x' }}" alt="Product">
        {% else %}
          {{ 'image' | placeholder_svg_tag }}
        {% endif %}
      </div>

      <div class="col-features">
        {% for block in section.blocks %}
          <div class="feature-row" {{ block.shopify_attributes }}>{{ block.settings.feature_text }}</div>
