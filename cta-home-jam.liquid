{%- style -%}
  .cta-jam-banner-{{ section.id }} {
    background-color: {{ section.settings.bg_color }};
    padding: 80px 20px;
    text-align: center;
  }
  
  .cta-badge {
    background-color: {{ section.settings.badge_bg_color }};
    color: #AF1F5C;
    padding: 6px 14px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-weight: 700;
    font-size: 16px;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: 25px;
    border-radius: 4px;
  }

  .cta-main-title {
    color: {{ section.settings.text_color }};
    font-size: 48px;
    font-weight: 400;
    margin: 0 0 20px 0;
    text-transform: uppercase;
    line-height: 1.2;
  }

  .cta-description {
    color: {{ section.settings.text_color }};
    font-size: 18px;
    max-width: 1020px;
    margin: 0 auto 35px auto;
    line-height: 1.4;
    opacity: 0.9;
  }

  .cta-button {
    background-color: {{ section.settings.btn_bg_color }};
    color: #ffffff !important;
    padding: 0px 20px;
    text-decoration: none;
    font-size: 48px;
    font-weight: 400;
    border-radius: 60px;
    display: inline-block;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    text-transform: uppercase;
  }

  /* Mobile Responsive */
  @media screen and (max-width: 767px) {
    .cta-jam-banner-{{ section.id }} { padding: 50px 15px; }
    .cta-main-title { font-size: 30px; }
    .cta-description { font-size: 15px; }
    .cta-button { font-size: 22px; padding: 14px 35px; }
    .cta-badge { font-size: 14px; }
  }
{%- endstyle -%}

<section class="cta-jam-banner-{{ section.id }}">
  <div class="page-width">
    {% if section.settings.badge_text != blank %}
      <div class="cta-badge">
        {{ section.settings.badge_text }} 
        <span>üçì</span>
      </div>
    {% endif %}

    {% if section.settings.title != blank %}
      <h2 class="cta-main-title">{{ section.settings.title }}</h2>
    {% endif %}

    {% if section.settings.subtext != blank %}
      <div class="cta-description">{{ section.settings.subtext }}</div>
    {% endif %}

    {% if section.settings.btn_label != blank %}
      <a href="{{ section.settings.btn_link }}" class="cta-button cus_font_anton">
        {{ section.settings.btn_label }}
      </a>
    {% endif %}
  </div>
</section>

